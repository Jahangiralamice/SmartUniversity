@model SmartUniversity.ViewModels.TeacherViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Teacher</h2>
@using (Html.BeginForm("Create", "Teacher"))
{
    @Html.ValidationSummary(true, "Please fix the following errors")
    <div class="form-group">
        @Html.LabelFor(m=>m.Teacher.Name)
        @Html.TextBoxFor(m=>m.Teacher.Name, new {@class = "form-control"})
        @Html.ValidationMessageFor(m=>m.Teacher.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Teacher.Address)
        @Html.TextAreaFor(m=>m.Teacher.Address, new {@class = "form-control"})
        @Html.ValidationMessageFor(m=>m.Teacher.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Teacher.Email)
        @Html.TextBoxFor(m=>m.Teacher.Email, new {@class = "form-control", @type = "Email"})
        @Html.ValidationMessageFor(m=>m.Teacher.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Teacher.ContactNo)
        @Html.TextBoxFor(m=>m.Teacher.ContactNo, new {@class = "form-control"})
        @Html.ValidationMessageFor(m=>m.Teacher.ContactNo)
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Teacher.DesignationId)
        @Html.DropDownListFor(m=>m.Teacher.DesignationId, new SelectList(Model.Designations, "Id", "Name"), "Select Desigantion", new {@class = "form-control"})
        @Html.ValidationMessageFor(m=>m.Teacher.DesignationId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Teacher.DepartmentId)
        @Html.DropDownListFor(m=>m.Teacher.DepartmentId, new SelectList(Model.Departments, "Id", "Name"), "Select Department", new {@class = "form-control"})
        @Html.ValidationMessageFor(m=>m.Teacher.DepartmentId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Teacher.CreditToBeTaken)
        @Html.TextBoxFor(m=>m.Teacher.CreditToBeTaken, new {@class = "form-control", @type = "number", @min = "0", @max = "5",@step = "0.5"})
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

